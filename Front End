    .card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));padding:12px;border-radius:12px;box-shadow:var(--shadow);display:flex;gap:12px;align-items:flex-start}
    .poster{min-width:88px;height:132px;border-radius:8px;background:#091024;display:flex;align-items:center;justify-content:center;font-weight:600;color:var(--muted);overflow:hidden}
    .meta{flex:1}
    .title{display:flex;align-items:center;justify-content:space-between;gap:8px}
    .title h3{margin:0;font-size:16px}
    .sub{color:var(--muted);font-size:13px;margin-top:6px}
    .rating{margin-top:8px;display:flex;gap:8px;align-items:center}
    .stars{display:inline-flex;gap:4px}
    .star{font-size:18px;opacity:0.6}
