    }
    *{box-sizing:border-box}
    body{font-family:Inter,ui-sans-serif,system-ui,Segoe UI,Roboto,"Helvetica Neue",Arial; margin:0; background:linear-gradient(180deg,#071126 0%, #071129 100%); color:#e6eef8; -webkit-font-smoothing:antialiased}
    .wrap{max-width:var(--maxw); margin:36px auto; padding:20px;}

    header{display:flex;align-items:center;gap:16px;margin-bottom:18px}
    .brand{display:flex;align-items:center;gap:12px}
    .logo{width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,#1e293b,#0ea5a0);display:flex;align-items:center;justify-content:center;font-weight:700;font-size:18px}
    h1{margin:0;font-size:20px}
