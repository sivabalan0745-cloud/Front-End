    .search{flex:1;min-width:220px}
    input[type=text]{width:100%;padding:10px 12px;border-radius:10px;border:0;background:var(--glass);color:inherit;outline:none}
    .btn{background:var(--accent);color:#071126;padding:10px 14px;border-radius:10px;border:0;cursor:pointer;font-weight:600}
    .filter{display:flex;gap:8px;align-items:center}
    select{padding:10px;border-radius:10px;border:0;background:var(--glass);color:inherit}

